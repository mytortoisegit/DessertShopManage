<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jia.sweetshop.mappers.MaterialMapper">

    <!-- 根据ID查询物资 -->
    <select id="selectById" resultType="com.jia.sweetshop.model.po.Material">
        SELECT * FROM material WHERE id = #{id}
    </select>

    <!-- 查询所有物资 -->
    <select id="selectAll" resultType="com.jia.sweetshop.model.po.Material">
        SELECT * FROM material
    </select>

    <!-- 插入物资 -->
    <insert id="insert" parameterType="com.jia.sweetshop.model.po.Material">
        INSERT INTO material (name, price, quantity)
        VALUES (#{name}, #{price}, #{quantity})
    </insert>

    <!-- 更新物资 -->
    <update id="update" parameterType="com.jia.sweetshop.model.po.Material">
        UPDATE material
        SET name = #{name}, price = #{price}, quantity = #{quantity}
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除物资 -->
    <delete id="deleteById">
        DELETE FROM material WHERE id = #{id}
    </delete>

</mapper>
