<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jia.sweetshop.mappers.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jia.sweetshop.model.bean.SysMenu">
        <id column="id" property="id" />
        <result column="menu_name" property="menuName" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="visible" property="visible" />
        <result column="status" property="status" />
        <result column="perms" property="perms" />
        <result column="icon" property="icon" />
        <result column="del_flag" property="delFlag" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, menu_name, path, component, visible, status, perms, icon, del_flag, create_by, create_time, update_by, update_time
    </sql>

    <select id="selectPermsByUserId" resultType="String">
        select distinct m.perms
        from sys_user_role ur  left join sys_role r on ur.role_id=r.id
                               left join sys_menu_role mr on  ur.role_id=mr.role_id
                               left join sys_menu m  on  m.id=mr.menu_id
          where user_id=#{userId}
          and r.status=0
          and m.status=0

    </select>
</mapper>
